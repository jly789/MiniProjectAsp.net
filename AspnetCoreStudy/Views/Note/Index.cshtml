

@{

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;

    }


}



<table class="table table-bordered">

    <thead>

        <tr>
             <th>번호</th>
             <th>제목</th>
             <th>작성자</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var note in Model)
    {
        <tr>
            <td>@note.NoteNo</td>
            <td>
                <a asp-controller="Note" asp-action="Detail" asp-route-NoteNo="@note.NoteNo">
                @note.NoteTitle
                    </a>
            </td>
            <td>@note.UserNo</td>

     
        </tr>    
    
    }    
    </tbody>

</table>






